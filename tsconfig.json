{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "." /* Base directory to resolve non-absolute module names. */,
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "include": ["src"]
}
